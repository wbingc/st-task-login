<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Login.mapper.TokenMapper">

    <!-- Define ResultMap for Type Token -->
    <resultMap id="tokenRM" type="com.example.Login.entity.User">
        <id property="id" javaType="int" column="ID"/>
        <result property="email" javaType="String" column="EMAIL"/>
        <result property="token" javaType="String" column="TOKEN"/>
    </resultMap>

    <!-- SELECT STATEMENT -->
    <select id="findByEmail" parameterType="string" resultType="string">
        SELECT TOKEN FROM TOKENS WHERE EMAIL = #{email}
    </select>

    <!-- UPDATE STATEMENT -->
    <update id="updateToken" parameterType="string">
        UPDATE TOKENS SET TOKEN = #{token} WHERE EMAIL = #{email}
    </update>

    <!-- DELETE STATEMENT -->
    <delete id="deleteToken" parameterType="string">
        DELETE FROM TOKENS WHERE EMAIL = #{email}
    </delete>
</mapper>